@using Microsoft.AspNetCore.Components.Authorization

<AuthorizeView>
    <Authorized>
        @context.User?.Identity?.Name!
        <FluentAnchor Href="logout" Target="_blank" Appearance="Appearance.Stealth">
            <FluentIcon Value="@(new Icons.Regular.Size20.ArrowExit())" />
        </FluentAnchor>
    </Authorized>
    <NotAuthorized>
        <FluentAnchor Href="login" Target="_blank" Appearance="Appearance.Stealth">
            <FluentIcon Value="@(new Icons.Regular.Size20.ArrowEnter())" />
        </FluentAnchor>
    </NotAuthorized>
</AuthorizeView>