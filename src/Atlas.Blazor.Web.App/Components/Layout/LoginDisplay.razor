@using Microsoft.AspNetCore.Components.Authorization

<AuthorizeView>
    <Authorized>
        @context.User?.Identity?.Name!
        <FluentAnchor Href="logout" Target="_blank">Logout</FluentAnchor>
    </Authorized>
    <NotAuthorized>
        <FluentAnchor Href="login" Target="_blank">Login</FluentAnchor>
    </NotAuthorized>
</AuthorizeView>