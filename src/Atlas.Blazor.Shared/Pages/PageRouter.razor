@using System

@page "/PageRouter/{ComponentCode}"
@page "/PageRouter/{ComponentCode}/{Id:int?}"

@inherits PageRouterBase

<AuthorizeView>
    <Authorized Context="page">
        @if (_pageArgs == null)
        {
            <Loading Title="Loading Title" Message="Loading message..."/>
        }
        else
        {
            <DynamicComponent @key=_pageArgs.PageCode Type="_pageArgs.GetComponentType()" Parameters="_pageArgs.ToDynamicComponentParameters()" />
        }
    </Authorized>
    <NotAuthorized>
        <LoginMessage/>
    </NotAuthorized>
</AuthorizeView>