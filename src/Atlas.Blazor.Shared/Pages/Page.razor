@using System

@page "/Page/{ComponentCode}"

@inherits PageBase

<AuthorizeView>
    <Authorized Context="page">
        @if (_componentArgs == null)
        {
            <Loading Title="Loading Title" Message="Loading message..."/>
        }
        else
        {
            <DynamicComponent @key=_componentArgs.ComponentArgsId Type="_componentArgs.GetComponentType()" Parameters="_componentArgs.ToDynamicComponentParameters()" />
        }
    </Authorized>
    <NotAuthorized>
        <LoginMessage/>
    </NotAuthorized>
</AuthorizeView>