@inherits ModuleViewBase

@if (!_loaded
    || ComponentArgs == null)
{
    <Loading Title="Module" Message="Loading..." />
}
else
{

    <ModelView T="Module" Id="@ComponentArgs.ModelInstanceId" IdentityField="@_identityField" TitleField="@_titleField"
                    CreateEndpoint="@_createEndpoint" UpdateEndpoint="@_updateEndpoint" DeleteEndpoint="@_deleteEndpoint">
        <ModelBodyFragment>
            <ModelPropertyRollout T="Module" Model="@_module" />
        </ModelBodyFragment>
    </ModelView>
}